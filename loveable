    PanelBackground = Color3.fromRGB(32, 32, 32),
    PanelTransparency = 0.25,
    PanelBorder = Color3.fromRGB(55, 55, 55),
    PanelBorderThickness = 1.5,
    PanelBorderTransparency = 0.5,
